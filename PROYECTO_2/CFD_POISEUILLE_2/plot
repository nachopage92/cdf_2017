 set terminal png #size 600,400

 set pm3d map
 #set view map
 set pm3d interpolate 5,5

 set output './animacion3/velocity_profile_100455.png'
 set key left top
 set title 'Perfil de velocidad en x = Lx/2'
 set xlabel 'y'
 set ylabel 'u'
 plot './animacion3/velocity_profile_100455.dat' using 1:2 with points title 'Result. Vol. Finitos' , \
  '' using 1:3 with lines title 'Result. Analítico'

 set output './animacion2/pressure_field_100455.png'
 set title 'Campo de presión P en cada volumen'
 set xlabel 'j-ésimo volumen'
 set ylabel 'i-ésimo volumen'
 splot './animacion2/pressure_field_100455.dat' matrix notitle 

 set output './animacion1/velocity_field_100455.png'
 set title 'Campo de velocidad V'
 set xlabel 'x'
 set ylabel 'y'
 plot './animacion1/velocity_field_100455.dat' using 1:2:3:4 with vectors head size 0.1,20,60 filled notitle
